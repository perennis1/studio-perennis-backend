datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String? // Add this line (? makes it optional)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
